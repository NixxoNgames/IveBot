{
  "name": "ivebot",
  "version": "3.0.0-canary.2",
  "description": "The bot that created the iPhone X.",
  "main": "server/index.ts",
  "scripts": {
    "test": "ava",
    "nyan": "ava --tap | tap-nyan",
    "lint": "eslint . --ext .js,.ts,.tsx && tsc --noEmit && graphql-schema-linter server/schema.graphql",
    "start": "node lib/index.js --production",
    "build": "next build && tsc",
    "dev": "nodemon server/index.ts",
    "mongo": "mongod --dbpath=database"
  },
  "author": "Ibrahim Ansari <ansari.ibrahim1@gmail.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=6.5.0"
  },
  "dependencies": {
    "@material-ui/core": "^1.2.0",
    "@material-ui/icons": "^1.1.0",
    "apollo-boost": "^0.1.4",
    "eris": "retrixe/eris",
    "graphql": "^0.13.2",
    "graphql-yoga": "^1.8.5",
    "isomorphic-unfetch": "^2.0.0",
    "json5": "^0.5.1",
    "mathjs": "^4.1.1",
    "mongodb": "^3.0.6",
    "next": "^6.1.1",
    "react": "^16.2.0",
    "react-apollo": "^2.1.3",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "@types/mongodb": "^3.0.12",
    "@types/next": "^2.4.7",
    "@types/node": "^8.0.53",
    "@types/react": "^16.0.36",
    "@zeit/next-typescript": "^1.1.0",
    "ava": "^1.0.0-beta.6",
    "eslint": "^5.1.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-plugin-graphql": "^2.1.1",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-standard": "^3.1.0",
    "eslint-plugin-typescript": "^0.12.0",
    "graphql-schema-linter": "^0.0.28",
    "husky": "^1.0.0-rc.13",
    "nodemon": "^1.12.1",
    "tap-nyan": "^1.1.0",
    "ts-node": "6.2.0",
    "typescript": "^3.0.1",
    "typescript-eslint-parser": "^18.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "ava": {
    "files": [
      "tests/**/*.test.ts"
    ],
    "sources": [
      "server/**/*.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "babel": {
      "testOptions": {
        "presets": [
          [
            "module:ava/stage-4",
            false
          ]
        ],
        "plugins": [
          "@babel/plugin-syntax-typescript"
        ]
      },
      "extensions": [
        "js",
        "ts"
      ]
    }
  }
}
