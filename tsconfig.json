{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": [
      "es2019",
      "es2020.promise",
      "es2020.bigint",
      "es2020.string"
    ],
    "target": "es2019",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "lib/",
    "pretty": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "index.d.ts"
  ],
  "exclude": [
    "dashboard"
  ]
}
